<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="ticket_list_view">
      <field name="name">Liste des tickets</field>
      <field name="model">cineprex.ticket</field>
      <field name="arch" type="xml">
        <tree>
          <field name="film_show_id"/>
          <field name="tariff_id"/>
          <field name="price"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="ticket_form_view">
      <field name="name">Formulaire ticket</field>
      <field name="model">cineprex.ticket</field>
      <field name="arch" type="xml">
        <form>
          <group>
                <field name="film_show_id"/>
                <field name="tariff_id"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="ticket_action_window">
      <field name="name">Ticket</field>
      <field name="res_model">cineprex.ticket</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="cineprex" id="cineprex.menu_root"/>
    <menuitem name="Ticket" id="cineprex_ticket_cat" parent="cineprex.menu_root" action="ticket_action_window" />
</odoo>