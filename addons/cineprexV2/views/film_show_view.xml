<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="film_show_list_view">
      <field name="name">Liste des séances</field>
      <field name="model">cineprex.film_show</field>
      <field name="arch" type="xml">
        <tree>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="room_id"/>
            <field name="movie_id"/>
            <field name="full"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="film_show_form_view">
      <field name="name">Formulaire séance</field>
      <field name="model">cineprex.film_show</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="start_date"/>
            <field name="room_id"/>
            <field name="movie_id"/>
          </group>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="film_show_calendar_view">
      <field name="name">Calendrier séance</field>
      <field name="model">cineprex.film_show</field>
      <field name="arch" type="xml">
      <calendar string="Planning des séances" date_start="start_date" date_stop="end_date" event_open_popup="true" mode="month" color="value" quick_add="False">
         <field name="value" />
      </calendar>
     </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="film_show_action_window">
      <field name="name">Séances</field>
      <field name="res_model">cineprex.film_show</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem name="cineprex" id="cineprex.menu_root"/>
    <menuitem name="Séance" id="cineprex_film_show_cat" parent="cineprex.menu_root" action="film_show_action_window"/>
</odoo>