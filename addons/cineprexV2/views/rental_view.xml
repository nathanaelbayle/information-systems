<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="rental_list_view">
      <field name="name">Liste des locations</field>
      <field name="model">cineprex.rental</field>
      <field name="arch" type="xml">
        <tree>
            <field name="start"/>
            <field name="end"/>
            <field name="price"/>
            <field name="total_price"/>
            <field name="provider_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="rental_form_view">
      <field name="name">Formulaire location</field>
      <field name="model">cineprex.rental</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="start"/>
            <field name="end"/>
            <field name="price"/>
            <field name="provider_id"/>
          </group>
        </form>
      </field>
    </record>


    <record model="ir.ui.view" id="rental_calendar_view">
      <field name="name">Calendrier location</field>
      <field name="model">cineprex.rental</field>
      <field name="arch" type="xml">
      <calendar string="Planning des locations" date_start="start" date_stop="end" event_open_popup="true" mode="month" color="movie_html" quick_add="False">
         <field name="movie_html" />
      </calendar>
     </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="rental_action_window">
      <field name="name">Locations</field>
      <field name="res_model">cineprex.rental</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <menuitem name="cineprex" id="cineprex.menu_root"/>
    <menuitem name="Locations" id="cineprex_rental_cat" parent="cineprex.menu_root" action="rental_action_window"/>

</odoo>