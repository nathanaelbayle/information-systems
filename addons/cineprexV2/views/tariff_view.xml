<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="tariff_list_view">
      <field name="name">Liste des tarifs</field>
      <field name="model">cineprex.tariff</field>
      <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="price"/>
            <field name="age_name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="tariff_form_view">
      <field name="name">Formulaire tarif</field>
      <field name="model">cineprex.tariff</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="price"/>
            <field name="age"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="tariff_action_window">
      <field name="name">Tarifs</field>
      <field name="res_model">cineprex.tariff</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="cineprex" id="cineprex.menu_root"/>
    <menuitem name="Tarifs" id="cineprex_tariff_cat" parent="cineprex.menu_root" action="tariff_action_window"/>

</odoo>