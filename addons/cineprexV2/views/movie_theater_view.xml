<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="movie_theater_list_view">
      <field name="name">Liste des cinémas</field>
      <field name="model">cineprex.movie_theater</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="society_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="movie_theater_form_view">
      <field name="name">Formulaire cinéma</field>
      <field name="model">cineprex.movie_theater</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="name"/>
            <field name="society_id"/>
          </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="movie_theater_action_window">
      <field name="name">Cinémas</field>
      <field name="res_model">cineprex.movie_theater</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="cineprex" id="cineprex.menu_root"/>
    <menuitem name="Cinémas" id="cineprex_movie_theater_cat" parent="cineprex.menu_root" action="movie_theater_action_window"/>
</odoo>